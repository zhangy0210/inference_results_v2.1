#     && tar -xvzf TensorRT-*.*.x86_64-gnu.cuda-${CUDA_VER}.internal.tar.gz -C trt --strip-components 1 \
#     && cp -rv trt/lib/* /usr/lib/x86_64-linux-gnu/ \
